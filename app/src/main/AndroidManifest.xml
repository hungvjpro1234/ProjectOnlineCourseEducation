<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProjectOnlineCourseEducation">

        <activity android:name=".feature.auth.activity.LoginActivity" />
        <activity android:name=".feature.auth.activity.RegisterActivity" />
        <activity android:name=".feature.auth.activity.ForgotPasswordActivity" />
        <activity android:name=".feature.student.activity.StudentHomeActivity" />
        <activity android:name=".feature.teacher.activity.TeacherHomeActivity" />
        <activity android:name=".feature.admin.activity.AdminHomeActivity" />
        <activity
            android:name=".feature.student.activity.StudentEditProfileActivity"
            android:exported="false" />
        <activity
            android:name=".feature.student.activity.StudentCourseLessonActivity"
            android:exported="false" />
        <activity android:name=".feature.student.activity.StudentCourseDetailActivity" />
        <activity
            android:name=".feature.student.activity.YoutubeDemoActivity"
            android:exported="false"
            android:screenOrientation="sensorLandscape" />

        <activity
            android:name=".feature.auth.activity.MainActivity2"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>
</manifest>