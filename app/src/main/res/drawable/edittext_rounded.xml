<?xml version="1.0" encoding="utf-8"?>
<!-- edittext_rounded.xml
     Background bo góc cho EditText (sử dụng màu từ colors.xml)
-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- fill: dùng background nhẹ -->
    <solid android:color="@color/white"/>

    <!-- bo góc -->
    <corners android:radius="8dp"/>

    <!-- viền mảnh -->
    <stroke
        android:width="1dp"
        android:color="@color/divider" />

    <!-- padding bên trong (một số phiên bản Android tôn trọng padding shape) -->
    <padding android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>
