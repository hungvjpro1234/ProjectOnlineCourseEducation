<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Course Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- Course Avatar -->
            <ImageView
                android:id="@+id/imgCourseAvatar"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ava_teacher"
                android:scaleType="centerCrop"
                android:contentDescription="@string/app_name"
                android:layout_marginEnd="12dp" />

            <!-- Course Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Course Name -->
                <TextView
                    android:id="@+id/tvCourseName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Láº­p trÃ¬nh Android NÃ¢ng cao"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_dark"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginBottom="6dp" />

                <!-- Approval status tag (added) -->
                <TextView
                    android:id="@+id/tvApprovalStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Äang chá» duyá»‡t"
                    android:textSize="11sp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/bg_tag_gray"
                    android:textColor="@android:color/black"
                    android:visibility="gone" />

                <!-- Rating and Student Count -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â­ 4.8"
                        android:textSize="12sp"
                        android:textColor="@color/orange_main"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/tvStudentCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ‘¥ 1.2K"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"
            android:layout_marginBottom="12dp" />

        <!-- Course Details Bottom -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Price -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GiÃ¡"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginBottom="2dp" />

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="299.000 VNÄ"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/blue_700" />
            </LinearLayout>

            <!-- View Details Button (MaterialButton as requested) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewDetails"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Xem chi tiáº¿t"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_button_primary"
                app:backgroundTint="@null"
                android:paddingHorizontal="12dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
