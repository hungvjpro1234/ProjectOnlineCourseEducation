<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@drawable/bg_progress_item"
    android:layout_marginVertical="3dp">

    <!-- Header: Title + Completed Icon + Percent -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvLessonTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1. Giới thiệu khóa học"
            android:textColor="#212121"
            android:textSize="13sp"
            android:maxLines="1"
            android:ellipsize="end" />

        <ImageView
            android:id="@+id/imgCompleted"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_check_circle"
            app:tint="#4CAF50"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="100%"
            android:textColor="#757575"
            android:textSize="13sp"
            android:textStyle="bold"
            android:minWidth="40dp"
            android:gravity="end" />
    </LinearLayout>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_marginTop="6dp"
        android:max="100"
        android:progress="75"
        android:progressDrawable="@drawable/progress_bar_gradient" />

</LinearLayout>