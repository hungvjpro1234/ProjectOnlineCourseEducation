<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/colorBackground">

    <!-- Toolbar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/blue_700"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="@string/back"
            android:scaleType="centerInside"
            app:tint="@color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tạo khóa học mới"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingStart="16dp" />

        <ImageButton
            android:id="@+id/btnCreate"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_check"
            android:contentDescription="@string/create_course"
            android:scaleType="centerInside"
            app:tint="@color/white" />
    </LinearLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Section title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông tin khóa học"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="12dp" />

            <!-- Course Image Area (only URL + Confirm) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardImageUpload"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:background="@color/blue_50">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- Preview image (loaded after confirm) -->
                    <ImageView
                        android:id="@+id/imgCoursePreview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/course_image"
                        android:visibility="gone" />

                    <!-- Placeholder when no image loaded -->
                    <LinearLayout
                        android:id="@+id/uploadPlaceholder"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@color/blue_100">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_image_placeholder"
                            android:contentDescription="@string/course_image"
                            app:tint="@color/blue_700" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ảnh khóa học"
                            android:textSize="14sp"
                            android:textColor="@color/blue_700"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nhập URL và nhấn 'Xác nhận'"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Image URL + Confirm button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etImageUrl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="URL ảnh khóa học (ví dụ https://...)"
                        android:inputType="textUri" />
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btnConfirmImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xác nhận"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="@color/blue_700" />
            </LinearLayout>

            <!-- Course Title -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tên khóa học"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Category selection: fixed list -> show selected chips + button mở dialog chọn -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Danh mục"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <!-- Selected categories displayed as chips (initially empty) -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupSelectedCategories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:singleSelection="false"
                app:chipSpacing="8dp"
                android:layout_marginBottom="8dp" />

            <!-- Button to open category picker (picker will use the fixed list you provided) -->
            <Button
                android:id="@+id/btnPickCategories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chọn danh mục"
                android:backgroundTint="@color/blue_700"
                android:layout_marginBottom="12dp" />

            <!-- Price -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Giá (VND)"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Description -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDescription"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:hint="Mô tả khóa học"
                    android:inputType="textMultiLine"
                    android:gravity="top" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Skills Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kỹ năng học được"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/skillsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnAddSkill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ Thêm kỹ năng"
                android:backgroundTint="@color/blue_700"
                android:layout_marginBottom="12dp" />

            <!-- Requirements Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yêu cầu tiên quyết"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/requirementsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnAddRequirement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ Thêm yêu cầu"
                android:backgroundTint="@color/blue_700"
                android:layout_marginBottom="16dp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"
                android:layout_marginVertical="12dp" />

            <!-- Lessons Section (create supports adding multiple lessons) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Bài học"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/btnAddLesson"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:minHeight="40dp"
                    android:text="+ Thêm"
                    android:textSize="12sp"
                    android:backgroundTint="@color/blue_700" />
            </LinearLayout>

            <!-- Lessons RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvLessons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:nestedScrollingEnabled="false" />

            <TextView
                android:id="@+id/tvNoLessons"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="Chưa có bài học nào.\nNhấn '+ Thêm' để tạo bài học mới."
                android:gravity="center"
                android:textColor="@color/hint_text"
                android:textSize="14sp" />

            <!-- Spacer -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
