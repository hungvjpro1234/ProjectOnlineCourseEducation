<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/etQuizTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tiêu đề Quiz" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvQuestions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="ifContentScrolls" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp">

        <android.widget.Button
            android:id="@+id/btnCancelQuiz"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Hủy"
            android:textSize="11sp"
            android:paddingHorizontal="12dp"
            android:background="@drawable/bg_badge_red"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/white" />

        <!-- View rỗng đẩy 2 nút sang hai phía -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <android.widget.Button
            android:id="@+id/btnSaveQuiz"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Lưu"
            android:textSize="11sp"
            android:paddingHorizontal="12dp"
            android:background="@drawable/bg_badge_hard_purple"
            android:layout_marginRight="10dp"
            android:textColor="@android:color/white" />

    </LinearLayout>
</LinearLayout>
