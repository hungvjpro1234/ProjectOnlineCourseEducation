<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- TabLayout for User Management -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutUserManagement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:tabIndicatorColor="@color/blue_700"
        app:tabSelectedTextColor="@color/blue_700"
        app:tabTextColor="@android:color/darker_gray">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Học viên" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giảng viên" />
    </com.google.android.material.tabs.TabLayout>

    <!-- ViewPager for Sub-fragments -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerUserManagement"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
