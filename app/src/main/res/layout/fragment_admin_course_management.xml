<?xml version="1.0" encoding="utf-8"?>
<!-- fragment_admin_course_management.xml
     Fragment quản lý khóa học cho Admin
     - filter: spinner category
     - search: tên / giảng viên
     - sort: spinner
     - show list: RecyclerView
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_admin_course_management_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@color/colorBackground">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quản lý Khóa học"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/blue_700"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- Controls: category, sort -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="6dp">

        <Spinner
            android:id="@+id/spinner_category"
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="40dp"
            android:prompt="@string/select_category"/>

        <Spinner
            android:id="@+id/spinner_sort"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:prompt="@string/select_sort" />

        <Button
            android:id="@+id/btn_clear_filters"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="40dp"
            android:text="Xóa"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- Search -->
    <EditText
        android:id="@+id/et_search"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:hint="Tìm theo tên khóa học hoặc giảng viên..."
        android:drawableStart="@android:drawable/ic_menu_search"
        android:drawablePadding="8dp"
        android:inputType="text"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edittext_rounded"/>

    <!-- List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_courses"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="12dp"/>

    <!-- Empty -->
    <TextView
        android:id="@+id/tv_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Không có khóa học nào"
        android:textColor="@android:color/darker_gray"
        android:gravity="center"
        android:visibility="gone"
        android:padding="12dp"/>

</LinearLayout>
