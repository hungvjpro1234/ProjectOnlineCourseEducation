<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Collapsed View -->
        <LinearLayout
            android:id="@+id/collapsedView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp">

            <ImageView
                android:id="@+id/imgTeacherAvatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ava_teacher"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTeacherName"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_dark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvTeacherEmail"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imgExpandTeacher"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_expand" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray" />

        <!-- Expanded View -->
        <LinearLayout
            android:id="@+id/expandedView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Tổng khóa học:"
                    android:textSize="13sp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvTotalCourses"
                    android:textStyle="bold"
                    android:textColor="@color/blue_700"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Tổng thu nhập:"
                    android:textSize="13sp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvTotalRevenue"
                    android:textStyle="bold"
                    android:textColor="@color/green_success"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewDetails"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Xem chi tiết"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_button_primary"
                android:layout_gravity="end" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
