<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Collapsed View (Header) -->
        <LinearLayout
            android:id="@+id/collapsedView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp">

            <!-- Avatar -->
            <ImageView
                android:id="@+id/imgStudentAvatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ava_student"
                android:scaleType="centerCrop"
                android:contentDescription="@string/app_name"
                android:layout_marginEnd="12dp"
                android:background="@drawable/bg_avatar_ring"
                android:padding="2dp" />

            <!-- Name and Email -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvStudentName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nguyễn Văn A"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_dark" />

                <TextView
                    android:id="@+id/tvStudentEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="nguyenvana@gmail.com"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <!-- Expand Icon -->
            <ImageView
                android:id="@+id/imgExpandStudent"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_expand"
                android:contentDescription="@string/app_name"
                android:scaleType="centerInside" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"
            android:id="@+id/divider1" />

        <!-- Expanded View (Details) -->
        <LinearLayout
            android:id="@+id/expandedView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="12dp">

            <!-- Total Spent -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tổng chi tiêu:"
                    android:textSize="13sp"
                    android:textColor="@color/text_dark" />

                <TextView
                    android:id="@+id/tvTotalSpent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.990.000 VNĐ"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/blue_700" />
            </LinearLayout>

            <!-- Courses Purchased -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Khóa học đã mua:"
                    android:textSize="13sp"
                    android:textColor="@color/text_dark" />

                <TextView
                    android:id="@+id/tvCoursesPurchased"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12 khóa"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/blue_700" />
            </LinearLayout>

            <!-- Cart Items -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Khóa học trong giỏ:"
                    android:textSize="13sp"
                    android:textColor="@color/text_dark" />

                <TextView
                    android:id="@+id/tvCartItems"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 khóa"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/orange_main" />
            </LinearLayout>

            <!-- View Details Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewDetails"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Xem chi tiết"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_button_purple"
                android:layout_gravity="right"
                app:backgroundTint="@null"
                android:paddingHorizontal="16dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
