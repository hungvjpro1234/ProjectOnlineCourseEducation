<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Header (Collapsed State) -->
    <LinearLayout
        android:id="@+id/layoutStudentHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:paddingVertical="12dp"
        android:background="?attr/selectableItemBackground">

        <!-- Expand/Collapse Icon -->
        <ImageView
            android:id="@+id/imgExpand"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_view"
            android:contentDescription="@string/app_name" />

        <!-- Student Avatar -->
        <ImageView
            android:id="@+id/imgStudentAvatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ava_student"
            android:scaleType="centerCrop"
            android:layout_marginStart="12dp"
            android:contentDescription="@string/app_name" />

        <!-- Student Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tvStudentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Student One"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvStudentEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="student1@example.com"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>

        <!-- Progress Badge -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tvProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="75%"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiến độ"
                android:textSize="10sp"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>
    </LinearLayout>

    <!-- Expanded Content -->
    <LinearLayout
        android:id="@+id/layoutStudentDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="12dp"
        android:paddingVertical="12dp"
        android:background="@android:color/darker_gray"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tổng tiến độ học"
                android:textSize="12sp" />

            <ProgressBar
                android:id="@+id/pbProgress"
                android:layout_width="150dp"
                android:layout_height="8dp"
                android:progress="75"
                android:progressDrawable="@android:drawable/progress_horizontal"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bài hoàn thành"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvLessonCompleted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15/20"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- NOTE: "Lần cuối xem" and "Thời gian học" removed -->

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/white"
            android:layout_marginVertical="8dp" />

        <!-- Lesson Progress List -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chi tiết bài học:"
            android:textSize="11sp"
            android:textStyle="bold"
            android:paddingVertical="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvLessonProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
