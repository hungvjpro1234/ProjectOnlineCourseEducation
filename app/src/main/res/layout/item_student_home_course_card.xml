<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="2dp">

    <!-- Ảnh khóa học -->
    <ImageView
        android:id="@+id/imgCourse"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/app_name" />

    <!-- Hàng title + badge "ĐÃ MUA" -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="6dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Course title"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black" />

        <!-- Badge đánh dấu đã mua -->
        <TextView
            android:id="@+id/tvPurchasedBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_marginStart="8dp"
            android:text="ĐÃ MUA"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@color/purple_600"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvTeacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GV: ..."
        android:textColor="@android:color/darker_gray" />

    <!-- NEW: Rating -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="2dp"
        android:paddingBottom="2dp">

        <RatingBar
            android:id="@+id/ratingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="0.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:progressTint="@android:color/holo_orange_light"/>

        <TextView
            android:id="@+id/tvRatingValue"
            android:layout_marginStart="6dp"
            android:text="4.5"
            android:textStyle="bold"
            android:textColor="@color/colorSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvLectures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bài giảng: 0" />

    <TextView
        android:id="@+id/tvStudents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Học viên: 0" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0 đ"
        android:textStyle="bold"
        android:textColor="@color/colorSecondary" />
</LinearLayout>
