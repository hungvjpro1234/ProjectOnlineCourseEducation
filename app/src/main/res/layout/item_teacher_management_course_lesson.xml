<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutLessonItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingHorizontal="12dp"
    android:paddingVertical="12dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <!-- Lesson Order -->
    <TextView
        android:id="@+id/tvLessonNumber"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:text="1"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@color/blue_700"
        android:textColor="@color/purple_text_primary"
        android:padding="4dp" />

    <!-- Title & Duration -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp">

        <TextView
            android:id="@+id/tvLessonTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bài 1: Giới thiệu cơ bản"
            android:textSize="14sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/tvDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⏱ 15 phút"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray" />
    </LinearLayout>

    <!-- (No edit/delete buttons anymore) -->

</LinearLayout>
