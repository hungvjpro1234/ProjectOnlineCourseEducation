<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:elevation="4dp"
    android:padding="12dp"
    android:radius="8dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Course image -->
        <ImageView
            android:id="@+id/imgCourse"
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTitle"
                android:text="Nhập môn lập trình Java"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvTeacher"
                android:text="Trần Đình Vũ Hải"
                android:textSize="13sp"
                android:textColor="@color/blue_text_primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- Rating + Total lecture -->
            <TextView
                android:id="@+id/tvInfo"
                android:text="4.6 ★  •  45 bài học"
                android:textSize="12sp"
                android:textColor="#777"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- Price -->
            <TextView
                android:id="@+id/tvPrice"
                android:text="199 000 VND"
                android:textStyle="bold"
                android:textColor="@color/blue_900"
                android:textSize="15sp"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <!-- Cột nút xóa + thanh toán -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="top|center_horizontal">

            <!-- Remove button -->
            <ImageView
                android:id="@+id/btnRemove"
                android:src="@drawable/ic_delete"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:tint="#B00020"
                android:padding="4dp" />

            <!-- Pay button for this item -->
            <Button
                android:id="@+id/btnPayItem"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/blue_400"
                android:text="Thanh toán"
                android:textSize="10sp"
                android:textAllCaps="false"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
