<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:elevation="2dp"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imgCourseThumb"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_image_placeholder" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingEnd="4dp">

            <TextView
                android:id="@+id/tvCourseTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="Tên khóa học"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/blue_900" />

            <TextView
                android:id="@+id/tvCourseTeacher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GV: ..."
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/tvCourseInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="24 bài • 12 giờ"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="2dp" />

            <!-- NEW: Course item progress bar + percent + completed count -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="6dp">

                <ProgressBar
                    android:id="@+id/progressCourseItemBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    android:layout_weight="1"
                    android:max="100"
                    android:progress="0"
                    android:indeterminate="false"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvCourseItemProgressPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvCourseItemCompleted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0 / 0 bài hoàn thành"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvStatusPurchased"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ĐÃ MUA"
                android:textAllCaps="true"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@color/purple_600"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="2dp" />

        </LinearLayout>

        <Button
            android:id="@+id/btnLearnNow"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:minWidth="0dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:gravity="center"
            android:text="Học ngay"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:backgroundTint="@color/purple_800"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>
